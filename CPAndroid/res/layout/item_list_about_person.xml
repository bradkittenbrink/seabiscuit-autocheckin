<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="65dp" >

    <ImageView
        android:id="@+id/imageview_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:adjustViewBounds="true"
        android:background="@drawable/default_avatar25"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/dummy_view"
        android:layout_width="1px"
        android:layout_height="70dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/imageview_image"
        android:background="#ff444444" />

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dummy_view"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/textview_persone_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="tengai"
            android:textColor="#ffdddddd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="igram fudbal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="olimpiski Stadion"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_how_far"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:singleLine="true"
            android:text="dsfssdasd"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/list_arrow_dark_grey" />

        <TextView
            android:id="@+id/textview_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:singleLine="true"
            android:text="dsfssdasd"
            android:textColor="#33726f"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>