<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <RelativeLayout
        android:id="@+id/layout_places_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_vertical_left_bar"
            android:focusable="false"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingTop="0dp" >

            <EditText
                android:id="@+id/edittext_places_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:gravity="left|top"
                android:imeActionLabel="Send"
                android:imeOptions="actionSend"
                android:singleLine="false" />
        </LinearLayout>

        <com.coffeeandpower.views.CustomFontView
            android:id="@+id/textview_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="86dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="@string/activityFeedsUpdateText"
            android:textColor="#009c91"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageview_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:background="@drawable/default_avatar25"
            android:focusable="false" />

        <ImageView
            android:id="@+id/imageview_image_mask"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:src="@drawable/user_image_mask" />

        <Button
            android:id="@+id/button_places_chate_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_orange"
            android:onClick="onClickSend"
            android:padding="6dp"
            android:text="@string/send"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <View
        android:id="@+id/horizontal_line_after_update"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_places_chat"
        android:background="#dddddd" />

    <ListView
        android:id="@+id/listview_places_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_line_after_update"
        android:layout_marginBottom="4dp"
        android:background="#f5f5f5"
        android:cacheColorHint="#ffffff"
        android:divider="#eeeeee"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="false" >
    </ListView>

</RelativeLayout>