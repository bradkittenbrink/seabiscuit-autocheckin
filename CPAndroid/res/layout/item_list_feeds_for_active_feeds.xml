<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/date_hour_area"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:focusable="false"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_feed_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dip"
                    android:focusable="false"
                    android:textColor="#2d2d2d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_feed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dip"
                    android:focusable="false"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dip"
                android:layout_toRightOf="@id/date_hour_area"
                android:focusable="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dip"
                    android:background="@drawable/bg_vertical_left_bar"
                    android:focusable="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textview_chat_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dip"
                            android:focusable="false"
                            android:text=""
                            android:textColor="#111111"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/item_venue_feeds_reply_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_border_venue_feeds_reply"
                            android:orientation="vertical"
                            android:visibility="gone" >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@id/date_hour_area"
                android:adjustViewBounds="true"
                android:background="@drawable/default_avatar25"
                android:focusable="false" />

            <ImageView
                android:id="@+id/imageview_image_mask"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@id/date_hour_area"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:src="@drawable/user_image_mask" />

            <RelativeLayout
                android:id="@+id/love_sent_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageview_image"
                android:focusable="false"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/love_sent_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="12dip"
                    android:adjustViewBounds="true"
                    android:background="@drawable/love_sent"
                    android:focusable="false" />

                <ImageView
                    android:id="@+id/imageview_image_receiver"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dip"
                    android:layout_toRightOf="@id/love_sent_icon"
                    android:adjustViewBounds="true"
                    android:background="@drawable/default_avatar25"
                    android:focusable="false" />

                <ImageView
                    android:id="@+id/imageview_image_mask_receiver"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dip"
                    android:layout_toRightOf="@id/love_sent_icon"
                    android:adjustViewBounds="true"
                    android:focusable="false"
                    android:src="@drawable/user_image_mask" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#dddddd" />

</LinearLayout>