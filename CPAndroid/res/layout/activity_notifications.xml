<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#333333" 
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	
	    <RelativeLayout
	        android:id="@+id/dummy_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="45dip"
	        android:background="@drawable/header" >
	
	        <com.coffeeandpower.views.CustomFontView
	            android:id="@+id/textview_location_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text=""
	            android:textColor="#ffffff"
	            android:textSize="25dip" />
	
	        <Button
	            android:layout_width="41dip"
	            android:layout_height="28dip"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/btn_settings"
	            android:onClick="onClickBack" />
	    </RelativeLayout>
	    
	    <TextView
            android:text="@string/user_menu_show"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="5dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="10dp"
            android:textColor="#009590"
            android:textSize="20dip"    />
	    
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#333333" >
        
	        <TextView
	            android:text="@string/from"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textSize="15dip"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:gravity="left"    />

	        <Button
                android:id="@+id/btn_from"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_drop_down"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/user_menu_in_city"
                android:textColor="#000000" />
        
    	</LinearLayout>
    	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#333333" >
        
	        <TextView
	            android:text="Only when I am checked in"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textSize="15dip"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:paddingLeft="4dip"
	            android:gravity="left"    />

	        <ToggleButton
	            android:id="@+id/toggleButtonOnlyWhenCheckedIn"
	            android:layout_width="95dip"
	            android:layout_height="28dip"
	            android:layout_below="@+id/dummy_view"
	            android:layout_marginLeft="5dip"
	            android:layout_marginTop="10dip"
	            android:layout_toRightOf="@+id/dummy_text_1"
	            android:background="@drawable/btn_on_off"
	            android:textOff=""
	            android:textOn="" />
    	</LinearLayout>
    	
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#333333" >
        
	        <TextView
	            android:text="Quiet time"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textSize="15dip"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:paddingLeft="4dip"
	            android:gravity="left"    />

	        <ToggleButton
	            android:id="@+id/toggleButtonQuietTime"
	            android:layout_width="95dip"
	            android:layout_height="28dip"
	            android:layout_below="@+id/dummy_view"
	            android:layout_marginLeft="5dip"
	            android:layout_marginTop="10dip"
	            android:layout_toRightOf="@+id/dummy_text_1"
	            android:background="@drawable/btn_on_off"
	            android:textOff=""
	            android:textOn="" />
        
    	</LinearLayout>
    	
	    
	    <LinearLayout
	        android:id="@+id/quiet_time_extras"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#333333"
	        android:visibility="gone" >
        
	        <TextView
	            android:text="@string/from"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textSize="15dip"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:paddingLeft="4dip"
	            android:gravity="left"    />

	        <Button
	            android:id="@+id/btn_quiet_from"
	            android:layout_width="93dip"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left|center_vertical"
	            android:layout_marginBottom="5dip"
	            android:layout_marginLeft="5dip"
	            android:layout_marginRight="5dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/button_gray"
	            android:paddingBottom="10dip"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:paddingTop="10dip"
	            android:text=""
	            android:textColor="#000000" />

	        <TextView
	            android:text="@string/to"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textSize="15dip"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:paddingLeft="4dip"
	            android:gravity="left"    />

	        <Button
	            android:id="@+id/btn_quiet_to"
	            android:layout_width="93dip"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left|center_vertical"
	            android:layout_marginBottom="5dip"
	            android:layout_marginLeft="5dip"
	            android:layout_marginRight="5dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/button_gray"
	            android:paddingBottom="10dip"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:paddingTop="10dip"
	            android:text=""
	            android:textColor="#000000" />

    	</LinearLayout>
    	
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#333333" >
        
	        <TextView
	            android:text=" Allow anyone to send 1:1 chat"
	            android:layout_width="0dip"
		        android:layout_height="wrap_content"
	            android:textColor="#ffffff"
	            android:textSize="15dip"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:gravity="left"    />

	        <ToggleButton
	            android:id="@+id/toggleButtonOneToOneChat"
	            android:layout_width="95dip"
	            android:layout_height="28dip"
	            android:layout_below="@+id/dummy_view"
	            android:layout_marginLeft="5dip"
	            android:layout_marginTop="10dip"
	            android:layout_toRightOf="@+id/dummy_text_1"
	            android:background="@drawable/btn_on_off"
	            android:textOff=""
	            android:textOn="" />

    	</LinearLayout>
           


	    <ListView
			android:id="@+id/notification_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:cacheColorHint="#00000000"
			android:dividerHeight="1dip"
	        android:divider="#4a4a4a" >
		</ListView>

</LinearLayout>
